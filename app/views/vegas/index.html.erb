<h1>Vegas Lines</h1>
<h2>Games to Target</h2>
	<div class='optimal'>
		<% @vegas.optimal.each do |t| %>
			<%= "#{t[:away_team]} @ #{t[:home_team]}\t(#{t[:total].to_f.round(1)} pts)" %><br>
		<% end %>
	</div>

	<div class="pure-g">
	    <div class="pure-u-1-4">
	    	<h2>Total</h2>
			<% @vegas.highest_total.each do |t| %>
				<%= "#{t[:away_team]} @ #{t[:home_team]}\t(#{t[:total].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	    <div class="pure-u-1-4">
	    	<h2>Home Total</h2>
			<% @vegas.home_total.each do |t| %>
				<%= "#{t[:home_team]}\t(#{t[:total].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	    <div class="pure-u-1-4">
	    	<h2>Away Total</h2>
			<% @vegas.away_total.each do |t| %>
				<%= "#{t[:away_team]}\t(#{t[:total].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	    <div class="pure-u-1-4">
	    	<h2>Highest Spread</h2>
			<% @vegas.highest_spread.each do |t| %>
				<%= "#{t[:away_team]} @ #{t[:home_team]}\t(#{t[:spread].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	</div>