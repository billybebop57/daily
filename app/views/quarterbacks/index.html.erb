<h1>Quarterbacks</h1>
<h2>Optimal Cash Plays</h2>
	<div class='optimal'>
		<% @quarterbacks.optimal.each do |qb| %>
			<%= "#{qb[:name]}\t(#{qb[:avg_proj].to_f.round(1)} pts)" %><br>
		<% end %>
	</div>

<div class="pure-g">
	   <div class="pure-u-1-2">
	    <h2>Top 5 Projected</h2>
		<% @quarterbacks.top_projected.each do |qb| %>
			<%= "$#{qb[:salary]}: #{qb[:name]}\t(#{qb[:avg_proj].to_f.round(1)} pts)" %><br>
		<% end %>
	   </div>
	   <div class="pure-u-1-2">
	    <h2>Top Value</h2>
		<% @quarterbacks.top_value.each do |qb| %>
			<%= "$#{qb[:salary]}: #{qb[:name]}\t(#{qb[:avg_proj].to_f.round(1)} pts)" %><br>
		<% end %>
	   </div>
</div>