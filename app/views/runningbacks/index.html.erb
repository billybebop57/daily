<h1>Running Backs</h1>
<h2>Optimal Cash Plays</h2>
	<div class='optimal'>
		<% @running_backs.optimal.each do |rb| %>
			<%= "#{rb[:name]}\t(#{rb[:avg_proj].to_f.round(1)} pts)" %><br>
		<% end %>
	</div>
<div class="pure-g">
	    <div class="pure-u-1-2">
	    	<h2>Top 10 Projected</h2>
			<% @running_backs.top_projected.each do |rb| %>
				<%= "#{rb[:name]}\t(#{rb[:avg_proj].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	    <div class="pure-u-1-2">
	    	<h2>Top Value</h2>
			<% @running_backs.top_value.each do |rb| %>
				<%= "#{rb[:name]}\t(#{rb[:avg_proj].to_f.round(1)} pts)" %><br>
			<% end %>
	    </div>
	</div>
