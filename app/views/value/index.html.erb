<h1>Value Players</h1>

<div class='pure-g'>
	 <div class="pure-u-1-5">
	   	<h2>Quarterbacks</h2>
		<% @quarterbacks.top_value.each do |qb| %>
			<%= "$#{qb[:dpp]} / #{qb[:avg_proj].to_f.round(1)} - #{qb[:name]}" %><br>
